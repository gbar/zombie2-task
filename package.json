{
  "engines": {
    "node": "10.15.3"
  },
  "name": "zombie2-task",
  "version": "0.0.1",
  "description": "",
  "author": "Grzegorz Bar",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbar/zombie2-task"
  },
  "license": "MIT",
  "scripts": {
    "heroku-postbuild": "npm run prestart:prod && npm run migration:run",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:local": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:run": "./node_modules/.bin/typeorm migration:run",
    "migrate": "node -r dotenv/config ./node_modules/.bin/typeorm migration:run",
    "migrate:dev": "ts-node -r dotenv/config ./node_modules/.bin/typeorm migration:run",
    "migration:create": "ts-node -r dotenv/config ./node_modules/.bin/typeorm migration:create -n ",
    "migration:generate": "ts-node -r dotenv/config ./node_modules/.bin/typeorm migration:generate -n "
  },
  "dependencies": {
    "@nestjs/common": "6.3.2",
    "@nestjs/core": "6.3.2",
    "@nestjs/platform-express": "9.2.1",
    "@nestjs/swagger": "3.0.2",
    "@nestjs/typeorm": "6.1.2",
    "axios": "0.19.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.9.1",
    "decimal.js": "10.2.0",
    "env-var": "5.0.0",
    "nestjs-config": "1.4.2",
    "pg": "7.11.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.5.2",
    "swagger-ui-express": "4.0.6",
    "typeorm": "0.2.18",
    "cron": "1.7.1"
  },
  "devDependencies": {
    "@nestjs/testing": "6.3.2",
    "@types/cron": "1.7.1",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "10.14.10",
    "@types/supertest": "2.0.7",
    "concurrently": "4.1.0",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "supertest": "3.4.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
